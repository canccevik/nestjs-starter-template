{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "testEnvironment": "node",
  "testRegex": ".e2e-test.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@config/(.*)$": "<rootDir>/config/$1",
    "^@core/(.*)$": "<rootDir>/core/$1",
    "^@modules/(.*)$": "<rootDir>/modules/$1"
  },
  "testTimeout": 20000
}
